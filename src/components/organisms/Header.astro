---
import Email from '@components/atoms/icons/Email.astro';
import Github from '@components/atoms/icons/Github.astro';
import LinkedIn from '@components/atoms/icons/LinkedIn.astro';
import Location from '@components/atoms/icons/Location.astro';
import Resume from '@components/atoms/icons/Resume.astro';
---

<header class="header">
  <section class="pt-4 md:pt-40">
    <div class="container mx-auto px-8 lg:flex">
      <div class="flex flex-col justify-center lg:w-1/2">
        <img
          class="mx-auto h-64 w-64 rounded-full shadow-lg"
          src="/assets/images/orange.jpg"
          alt="Mauricio Romero Portrait"
        />
      </div>
      <div class="mt-8 text-center lg:mt-0 lg:w-1/2 lg:text-left">
        <h1 class="text-4xl font-bold leading-none lg:text-5xl xl:text-6xl">
          Mauricio N. Romero
        </h1>
        <p class="mt-6 text-3xl font-light lg:text-3xl">Front-end Developer</p>
        <p class="flex items-center gap-1">
          <span
            class="flex h-8 w-8 items-center justify-center rounded-lg text-retro_dark/80"
          >
            <Location />
          </span>
          Argentina
        </p>
        <span class="flex items-center gap-1">
          <a
          title="Email"
           target="_blank" href="mailto:mauricionromero@hotmail.com">
            <span
              class="flex h-8 w-8 items-center justify-center rounded-lg text-retro_dark/80 hover:bg-retro_light/40 hover:text-retro_dark"
            >
              <Email />
            </span>
          </a> mauricionromero@hotmail.com
        </span>
        <div class="flex items-center gap-1">
          <a
            title="Resume"
            target="_blank"
            href="#"
            class="flex h-8 w-8 items-center justify-center rounded-lg text-retro_dark/80 hover:bg-retro_light/40 hover:text-retro_dark"
          >
            <Resume /></a
          > |
          <a
            title="GitHub"
            target="_blank"
            href="#"
            class="flex h-8 w-8 items-center justify-center rounded-lg text-retro_dark/80 hover:bg-retro_light/40 hover:text-retro_dark"
            ><Github /></a
          > |
          <a
            title="LinkedIn"
            target="_blank"
            href="#"
            class="flex h-8 w-8 items-center justify-center rounded-lg text-retro_dark/80 hover:bg-retro_light/40 hover:text-retro_dark"
            ><LinkedIn /></a
          >
        </div>
      </div>
    </div>
  </section>
</header>
